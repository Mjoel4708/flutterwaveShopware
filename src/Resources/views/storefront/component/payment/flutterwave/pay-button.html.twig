{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
	{{ parent() }}
	<pre>
		{{ dump() }}
	</pre>
	<form method="post" action="{{ path('flutterwave.payment.method') }}" id="flutterwavePaymentForm">


		{% block payment_button_form_csrf %}
			{{ sw_csrf('flutterwave.payment.method') }}
		{% endblock %}
		<input
		type="hidden" name="amount" value="200"/>
		<!-- Replace the value with your transaction amount -->
		<input
		type="hidden" name="payment_options" value="mpesa"/>
